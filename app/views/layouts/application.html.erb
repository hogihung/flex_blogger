<!DOCTYPE>
<html>
<head>
  <title>FlexBlogger</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.9.1/styles/solarized_dark.min.css">
  <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.9.1/highlight.min.js"></script>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <%= render "layouts/nav_bar" %>

  <div class=hero>
    <div class=hero-inner>
      <div class=hero-copy>
        <h1><%= "#{Rails.configuration.title}" %></h1>
        <p><%= "#{Rails.configuration.sub_title}" %></p>
      </div>
    </div>
  </div>
  <%= render "layouts/flashes" %>
  </header>

  <main>
  <%= yield %>
  </main>

  <%= render "layouts/footer" %>
</body>
</html>
