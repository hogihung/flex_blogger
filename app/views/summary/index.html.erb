<h1>Summary of all published posts</h1>

<table class="tables">
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Created</th>
      <th>Last Modified</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= link_to post.title, post %> </td>
        <td> <%= h truncate(clean_html(post.body), length: 180) %>
        <td> <%= post.created_at %> </td>
        <td> <%= post.updated_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>
