<h1>Manage Users</h1>

<table class="tables">
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin?</th>
      <th>Name</th>
      <th class="actions"></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %>
        <td><%= user.admin %>
        <td><%= user.display_name %>
        <td><%= link_to "Edit", edit_user_path(user) %>
        <% if user.admin? %>
          <td></td>
        <% else %>
          <td><%= link_to "Delete", user, :method => :delete, :data => { :confirm => "Are you sure?" } %></td>
        <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users %>
<br>
<%= link_to "New User", new_user_path %>
