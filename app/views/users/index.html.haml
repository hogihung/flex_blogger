%h1 Manage Users

%table.tables
  %thead
    %tr
      %th Email
      %th Admin?
      %th Name
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.admin
        %td= user.display_name
        %td= link_to "Edit", edit_user_path(user)
        - if user.admin?
          %td 
        - else
          %td= link_to "Delete", user, :method => :delete, :data => { :confirm => "Are you sure?" }
= will_paginate @users

%br

= link_to "New User", new_user_path
